<?xml version="1.0" encoding="UTF-8"?>
<Configuration shutdownHook="disable">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p %d [%t] %c: %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Mule classes -->
        <AsyncLogger name="org.mule" level="WARN"/>
        <AsyncLogger name="org.mule.test.runner" level="INFO"/>
        <AsyncLogger name="com.mulesoft" level="WARN"/>

        <AsyncLogger name="org.mule.extensions.socket" level="DEBUG"/>
        <AsyncLogger name="org.mule.api.processor.LoggerMessageProcessor" level="INFO"/>

        <AsyncRoot level="INFO">
            <AppenderRef ref="Console"/>
        </AsyncRoot>
    </Loggers>
</Configuration>
